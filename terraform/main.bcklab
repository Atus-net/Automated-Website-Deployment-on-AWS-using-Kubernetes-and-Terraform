terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "us-east-1"
}

# --- 1. Láº¤Y THÃ”NG TIN Äá»˜NG ---
data "aws_caller_identity" "current" {}
data "aws_vpc" "default" {
  default = true
}

# --- 2. Táº O KHO ECR (Tá»° Äá»˜NG) ---
resource "aws_ecr_repository" "backend" {
  name         = "dolciluxe-backend"
  force_delete = true
}

resource "aws_ecr_repository" "frontend" {
  name         = "dolciluxe-frontend"
  force_delete = true
}

# --- 3. Táº O KEY PAIR (Tá»° Äá»˜NG) ---
# (ÄÆ°a lÃªn trÃªn Ä‘á»ƒ dá»… quáº£n lÃ½)

# A. Táº¡o Private Key
resource "tls_private_key" "pk" {
  algorithm = "RSA"
  rsa_bits  = 4096
}

# B. Äáº©y Public Key lÃªn AWS
resource "aws_key_pair" "kp" {
  key_name   = "dolciluxe-key"       
  public_key = tls_private_key.pk.public_key_openssh
}

# C. LÆ°u file .pem vá» mÃ¡y
resource "local_file" "ssh_key" {
  filename        = "${path.module}/dolciluxe-key.pem"
  content         = tls_private_key.pk.private_key_pem
  file_permission = "0400"
}

# --- 4. Báº¢O Máº¬T & MÃY CHá»¦ ---
resource "aws_security_group" "k3s_sg" {
  name        = "k3s-security-group-automation"
  description = "Allow Web, SSH and K8s traffic"
  vpc_id      = data.aws_vpc.default.id

  ingress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}

resource "aws_instance" "k3s_server" {
  ami           = "ami-0c7217cdde317cfec" # Ubuntu 22.04 LTS
  instance_type = "t3.medium"
  
  # ğŸ‘‡ [QUAN TRá»ŒNG] Trá» vÃ o Key Pair vá»«a táº¡o á»Ÿ trÃªn
  key_name = aws_key_pair.kp.key_name
  
  vpc_security_group_ids = [aws_security_group.k3s_sg.id]
  
  user_data = <<-EOF
              #!/bin/bash
              curl -sfL https://get.k3s.io | sh -s - --write-kubeconfig-mode 644
              EOF

  tags = {
    Name = "Dolciluxe-Auto-Server"
  }
}

# --- 5. Tá»° Äá»˜NG SINH CONFIG KUBERNETES ---
resource "local_file" "k8s_backend" {
  content = templatefile("${path.module}/../k8s/backend.tpl", {
    server_ip = aws_instance.k3s_server.public_ip
    ecr_url   = "${data.aws_caller_identity.current.account_id}.dkr.ecr.us-east-1.amazonaws.com"
  })
  filename = "${path.module}/../k8s/backend.yaml"
}

resource "local_file" "k8s_frontend" {
  content = templatefile("${path.module}/../k8s/frontend.tpl", {
    ecr_url   = "${data.aws_caller_identity.current.account_id}.dkr.ecr.us-east-1.amazonaws.com"
  })
  filename = "${path.module}/../k8s/frontend.yaml"
}

# --- 6. XUáº¤T THÃ”NG TIN ---
output "server_ip" {
  value = aws_instance.k3s_server.public_ip
}
output "ecr_registry" {
  value = "${data.aws_caller_identity.current.account_id}.dkr.ecr.us-east-1.amazonaws.com"
}