pipeline {
    agent any

    environment {
        DOCKERHUB_USER = "latuss"
        BACKEND_IMAGE = "my-backend"
        FRONTEND_IMAGE = "my-frontend"
        K8S_NAMESPACE = "web-app"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Push') {
            steps {
                script {
                    // Build and push backend
                    sh """
                        cd backend
                        docker build -t ${DOCKERHUB_USER}/${BACKEND_IMAGE}:latest .
                        docker push ${DOCKERHUB_USER}/${BACKEND_IMAGE}:latest
                    """
                    
                    // Build and push frontend
                    sh """
                        cd frontend
                        docker build -t ${DOCKERHUB_USER}/${FRONTEND_IMAGE}:latest .
                        docker push ${DOCKERHUB_USER}/${FRONTEND_IMAGE}:latest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Update and deploy
                    sh """
                        cd k8s
                        
                        # Update image tags
                        sed -i "s|image:.*${BACKEND_IMAGE}:.*|image: ${DOCKERHUB_USER}/${BACKEND_IMAGE}:latest|g" backend-deployment.yaml
                        sed -i "s|image:.*${FRONTEND_IMAGE}:.*|image: ${DOCKERHUB_USER}/${FRONTEND_IMAGE}:latest|g" frontend-deployment.yaml
                        
                        # Deploy
                        kubectl apply -f . -n ${K8S_NAMESPACE}
                        
                        # Verify
                        kubectl rollout status deployment/backend -n ${K8S_NAMESPACE}
                        kubectl rollout status deployment/frontend -n ${K8S_NAMESPACE}
                        
                        echo "âœ… Deployed successfully!"
                    """
                }
            }
        }
    }
}